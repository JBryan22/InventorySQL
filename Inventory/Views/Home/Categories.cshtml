@{
  Layout = "_Layout";
}
<div class="jumbotron">
  <h1>Categories</h1>
</div>
<div class="container">

@if(Model!=null)
{
  @if (Model.Count == 0)
  {
    <h3>No categories have been added yet!</h3>
  }
  @foreach(var category in Model)
  {
    <h3><a href="/categories/@category.GetId()"> @category.GetCategoryType()</a></h3>
  }
}


<p><a href="/">back home</a></p>
</div>
